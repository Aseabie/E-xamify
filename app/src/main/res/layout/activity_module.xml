<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModuleActivity">

    <TextView
        android:id="@+id/modulePageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Module"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/moduleNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Module Name"
        app:layout_constraintTop_toBottomOf="@id/modulePageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/moduleDescriptionInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Module Description"
        app:layout_constraintTop_toBottomOf="@id/moduleNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/createModuleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Module"
        app:layout_constraintTop_toBottomOf="@id/moduleDescriptionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
